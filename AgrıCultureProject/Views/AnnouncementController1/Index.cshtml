@using EntityLayer.concrete;
@model List<Announcement>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}
<h1>Index</h1>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>başlık</th>
                            <th>Açıklama</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/AnnouncementController1/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger" onclick="return confirm('Silmek İstiyormusunuz?')">Sil</a></td>
                                <td><a href="/AnnouncementController1/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-primary">Düzenle</a></td>
                                <td><a href="/AnnouncementController1/ChangeStatusTrue/@item.AnnouncementID" class="btn  btn-inverse-secondary">Aktif Yap</a></td>
                                <td><a href="/AnnouncementController1/ChangeStatusFalse/@item.AnnouncementID" class="btn btn-inverse-warning">Pasif Yap</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 </div>