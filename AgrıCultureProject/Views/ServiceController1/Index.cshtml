@using EntityLayer.concrete;
@model List<Service>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>başlık</th>
                            <th>Açıklama</th>
                            <th>GörselYolu</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceID</td>
                                <td>@item.title</td>
                                <td>@item.description</td>
                                <td>@item.İmage</td>
                                <td><a href="/ServiceController1/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/ServiceController1/UpdateService/@item.ServiceID" class="btn btn-outline-primary">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

