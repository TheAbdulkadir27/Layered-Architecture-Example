@using EntityLayer.concrete;
@model List<Contact>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}
<h1>Kişiler</h1>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kişiler Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Mail</th>
                            <th>Message</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContactID</td>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Message</td>
                                <td><a href="/ContactController1/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/ContactController1/UpdateContact/@item.ContactID" class="btn btn-outline-primary">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

